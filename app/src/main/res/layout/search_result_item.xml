<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/outerRViewMargin"
    android:background="@drawable/rectangle_rounded_all"
    android:padding="@dimen/filmItemPadding">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="75dp"
        android:layout_height="113dp"
        android:contentDescription="@string/film_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/small_forrest_gump_1994" />

    <TextView
        android:id="@+id/search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/filmsListItemMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название" />

    <TextView
        android:id="@+id/search_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/filmsListItemMargin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_image"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        tools:text="Год" />

    <TextView
        android:id="@+id/search_overview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/filmsListItemMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Описание"
        android:scrollbars="vertical"
        app:layout_constraintStart_toEndOf="@id/search_result_image"
        app:layout_constraintTop_toBottomOf="@id/search_date" />

</androidx.constraintlayout.widget.ConstraintLayout>